    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.2.0",
    "fetch-mock": "^8.0.1",
    "generate-changelog": "^1.8.0",
    "listr": "^0.14.1",
    "minimist": "^1.2.0",
    "mocha": "^6.2.2",
